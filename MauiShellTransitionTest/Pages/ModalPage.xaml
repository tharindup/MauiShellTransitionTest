<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiShellTransitionTest.Pages.ModalPage"
             Shell.PresentationMode="Modal"
             Title="ModalPage">
    <VerticalStackLayout Spacing="20" VerticalOptions="Center">
        <Button 
            Text="Go modeless" Padding="50, 20"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="OpenModelessPageButton_Clicked"/>
        <Button 
            Text="Go back"  Padding="50, 20" BackgroundColor="Orange"
            x:Name="GoBackButton"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="GoBackButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>